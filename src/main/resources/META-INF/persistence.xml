<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="db" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


    <properties>
    <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
    <property name="hibernate.connection.url" value="${javax__persistence__jdbc__url}"/>
    <property name="hibernate.connection.username" value="${javax__persistence__jdbc__user}"/>
    <property name="hibernate.connection.password" value="${javax__persistence__jdbc__password}"/>
    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    <property name="hibernate.hbm2ddl.auto" value="${hibernate__hbm2ddl__auto}"/>
    <property name="hibernate.show_sql" value="true"/>
    </properties>

    </persistence-unit>

</persistence>